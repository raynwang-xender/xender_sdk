<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#121416">

        <ImageView
            android:id="@+id/iv_left_narrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/tc_ic_actionbar_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send File"
            android:textColor="@color/tc_white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_left_narrow"
            android:layout_marginLeft="30dp"
            android:textSize="20sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#22252A">
        <!--背景2-->

            <!--二维码容器-->
            <RelativeLayout
                android:id="@+id/tc_content_container"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true">

                <ProgressBar
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />

            </RelativeLayout>

            <!--二维码下方文字-->
            <TextView
                android:id="@+id/tv_invite"
                style="@style/tc_text_style_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code with Xender"
                android:textColor="#8C9BAD"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tc_content_container"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#22252A">
            <!--背景2-->

            <!--vidmix底部整体-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#414752"
                android:layout_margin="20dp">
                <!--背景3-->

                <!--上半部-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_toLeftOf="@+id/vidmix_to_xender"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/vidmix"
                        android:layout_marginRight="24dp"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:id="@+id/vidmix_to_xender"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vidmix_to_xender"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/xender"
                        android:layout_toRightOf="@+id/vidmix_to_xender"
                        android:layout_marginLeft="24dp"
                        android:scaleType="centerInside"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <!--下半部 水平方向-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical">

                    <!--margintop改成18dp-->

                    <!--电影图片-->
                    <ImageView
                        android:id="@+id/iv_film_pic"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:src="@drawable/film_pic" />

                    <!--图片右侧-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="15dp">

                        <!--电影名-->
                        <TextView
                            android:id="@+id/tv_film_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="filenamefilenamefilenameaaaaaaaaaaaaaaaaa"
                            android:textColor="#DCDEE1"
                            android:textSize="13sp"
                            android:maxLines="3"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true">

                            <TextView
                                android:id="@+id/tv_film_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100.0Mb"
                                android:textColor="#8C9BAD"
                                android:textSize="10sp" />

                            <RelativeLayout
                                android:id="@+id/rl_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true">

                                <TextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Connecting.."
                                    android:textColor="#0F94F5"
                                    android:textSize="10sp"/>

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>


</LinearLayout>