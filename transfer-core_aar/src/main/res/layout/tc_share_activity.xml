<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/tc_toolbar"/>

    <RelativeLayout
        android:id="@+id/create_ap_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22252A">
        <!--背景2-->

        <LinearLayout
            android:id="@+id/tc_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/progressbar_margintop"/>

        </LinearLayout>


        <!--vidmix底部整体-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#424756"
            android:layout_margin="20dp">
            <!--背景3-->

            <!--上半部-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_toLeftOf="@+id/vidmix_to_xender"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/vidmix"
                    android:layout_marginRight="24dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/vidmix_to_xender"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/vidmix_to_xender"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/xender"
                    android:layout_toRightOf="@+id/vidmix_to_xender"
                    android:layout_marginLeft="24dp"
                    android:scaleType="centerInside"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!--下半部 水平方向-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="20dp">

                <!--电影图片-->
                <ImageView
                    android:id="@+id/iv_film_pic"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:src="@drawable/film_pic" />

                <!--图片右侧 垂直方向-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp">

                    <!--电影名-->
                    <TextView
                        android:id="@+id/tv_film_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="filenamefilenamefilenameaaaaaaaaaaaaaaaaa"
                        android:textColor="#DCDEE1"
                        android:textSize="13sp"
                        android:maxLines="3"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tv_film_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.0Mb"
                            android:textColor="#8C9BAD"
                            android:textSize="10sp" />

                        <RelativeLayout
                            android:id="@+id/rl_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connecting.."
                                android:textColor="#0F94F5"
                                android:textSize="10sp"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>