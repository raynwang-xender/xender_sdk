<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="tc_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textColorPrimary">@color/tc_txt_color</item>
        <item name="android:windowBackground">@color/tc_bg_color</item>
    </style>

    <style name="toolbar_text_style_bold">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/tc_white</item>
    </style>

    <style name="tc_text_style_bold">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tc_text_style_normal">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

</resources>
